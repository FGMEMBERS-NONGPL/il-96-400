<PropertyList>

    <path>gear-ctl.ac</path>

    <animation>
        <type>rotate</type>
        <object-name>AutoBrake.knob</object-name>
        <object-name>Abrake.001</object-name>
        <property>instrumentation/afds/settings/autobrake</property>
        <interpolation>
            <entry>
                <ind>-0.4</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>-0.2</ind>
                <dep>59</dep>
            </entry>
            <entry>
                <ind>0</ind>
                <dep>91</dep>
            </entry>
            <entry>
                <ind>0.2</ind>
                <dep>120.0</dep>
            </entry>
            <entry>
                <ind>0.4</ind>
                <dep>150.0</dep>
            </entry>
            <entry>
                <ind>0.6</ind>
                <dep>180.0</dep>
            </entry>
            <entry>
                <ind>0.8</ind>
                <dep>206.0</dep>
            </entry>
            <entry>
                <ind>1.0</ind>
                <dep>237.0</dep>
            </entry>
        </interpolation>
        <center>
            <x-m>0</x-m>
            <y-m>-0.011</y-m>
            <z-m>-0.113</z-m>
        </center>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>GearLever</object-name>
        <property>controls/gear/gear-down</property>
        <factor>30</factor>
        <center>
            <x-m>-0.056</x-m>
            <y-m>0</y-m>
            <z-m>0.010</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

<!-- OSG hotspots -->

    <animation>
        <type>pick</type>
        <object-name>GearLever</object-name>
        <action>
            <button>1</button>
            <binding>
                <command>nasal</command>
                <script>controls.gearDown(-1)</script>
            </binding>
            <mod-up>
                <binding>
                    <command>nasal</command>
                    <script>controls.gearDown(0)</script>
                </binding>
            </mod-up>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>GearLever</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>nasal</command>
                <script>controls.gearDown(1)</script>
            </binding>
            <mod-up>
                <binding>
                    <command>nasal</command>
                    <script>controls.gearDown(0)</script>
                </binding>
            </mod-up>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>AutoBrake.knob</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/afds/settings/autobrake</property>
                <step>0.2000</step>
                <min>-0.4000</min>
                <max>1.0000</max>
            </binding>
            <binding>
                <condition>
                    <greater-than>
                        <property>instrumentation/afds/settings/autobrake</property>
                        <value>0</value>
                    </greater-than>
                </condition>
                <command> property-assign</command>
                <property>autopilot/autobrake/engaged</property>
                <value>true</value>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>AutoBrake.knob</object-name>
        <action>
            <button>1</button>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/afds/settings/autobrake</property>
                <step>-0.2000</step>
                <min>-0.4000</min>
                <max>1.0000</max>
            </binding>
            <binding>
                <condition>
                    <less-than>
                        <property>instrumentation/afds/settings/autobrake</property>
                        <value>0.2</value>
                    </less-than>
                </condition>
                <command>property-assign</command>
                <property>autopilot/autobrake/engaged</property>
                <value>false</value>
            </binding>
        </action>
    </animation>

</PropertyList>